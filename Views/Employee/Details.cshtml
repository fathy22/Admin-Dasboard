@model MyDemo.Models.EmployeeViewModel
@{
    ViewBag.Title = "Details of Selected Employee";
}

<h1>Details of Selected Employee</h1>
<br />
<a asp-controller="Employee" asp-action="Index" class="btn btn-outline-info">Back To List</a>
<br />
<br />
<form class="form-group">

    <label asp-for="Name">Employee Name</label>
    <input type="text" asp-for="Name" readonly class="form-control" />
    <br /><br />

    <label asp-for="Salary">Employee Salary</label>
    <input type="text" asp-for="Salary" readonly class="form-control" />
    <br /><br />

    <label asp-for="Address">Employee Address</label>
    <input type="text" asp-for="Address" readonly class="form-control" />
    <br /><br />

    <label asp-for="Email">Employee Email</label>
    <input type="email" asp-for="Email" readonly class="form-control" />
    <br /><br />


    <label asp-for="HireDate">Hire Date</label>
    <input type="date" asp-for="HireDate" disabled class="form-control" />
    <br /><br />

    <div class="custom-control custom-checkbox">
        <label class="custom-control-label" asp-for="IsActive"> Is Active</label>
        <input type="checkbox" disabled="disabled" asp-for="IsActive" class="custom-control-input" readonly>
    </div>
    <br />

    <label asp-for="Notes">Notes</label>
    <textarea asp-for="Notes" readonly class="form-control" rows="4"></textarea>
    <br />
    <label asp-for="DepartmentId">Department</label>
    <select asp-for="DepartmentId" asp-items="@(SelectList)ViewBag.DepartmentList" disabled class="form-control">
    </select>
    <br /><br />
    <label asp-for="DistrictId">District</label>
    <select asp-for="DistrictId" asp-items="@(SelectList)ViewBag.DistrictList" disabled class="form-control">
    </select>
    <br />
    <label asp-for="PhotoName">Photo:</label>
    <input type="text" asp-for="PhotoName" readonly class="form-control" />
    <br />
    <label asp-for="CvName">CV:</label>
    <input type="text" asp-for="CvName" readonly class="form-control" />
</form>
