@model MyDemo.Models.EmployeeViewModel
@{
    ViewBag.Title = "Update Selected Employee";
}

<h1>Update Selected Employee</h1>
<form asp-controller="Employee" asp-action="Edit" method="post" class="form-group">

    <label asp-for="Name">Employee Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span class="text-danger" asp-validation-for="Name"></span>
    <br /><br />

    <label asp-for="Salary">Employee Salary:</label>
    <input type="text" asp-for="Salary" class="form-control" />
    <span class="text-danger" asp-validation-for="Salary"></span>
    <br /><br />

    <label asp-for="Address">Employee Address:</label>
    <input type="text" asp-for="Address" class="form-control" />
    <span class="text-danger" asp-validation-for="Address"></span>
    <br /><br />

    <label asp-for="Email">Employee Email</label>
    <input type="email" asp-for="Email" class="form-control" />
    <span class="text-danger" asp-validation-for="Email"></span>
    <br /><br />


    <label asp-for="HireDate">Hire Date</label>
    <input type="date" asp-for="HireDate" class="form-control" />
    <span class="text-danger" asp-validation-for="HireDate"></span>
    <br /><br />

    <div class="custom-control custom-checkbox">
        <input type="checkbox" asp-for="IsActive" class="custom-control-input">
        <label class="custom-control-label" asp-for="IsActive"> Is Active</label>
    </div>
    <span class="text-danger" asp-validation-for="IsActive"></span>
    <br />

    <label asp-for="Notes">Notes</label>
    <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
    <span class="text-danger" asp-validation-for="Notes"></span>
    <br />
    @*<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
            <button type="button" class="btn btn-success">Choose Department</button>
            <div class="btn-group show" role="group">
                <button id="btnGroupDrop2" type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></button>
                <div class="dropdown-menu show" aria-labelledby="btnGroupDrop2" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 36px, 0px); top: 0px; left: 0px; will-change: transform;">
                    <a class="dropdown-item" href="#">Dropdown link</a>
                    <a class="dropdown-item" href="#">Dropdown link</a>

                </div>
            </div>
        </div>*@
    <label asp-for="DepartmentId">Department Name:</label>
    <select asp-for="DepartmentId" asp-items="@(SelectList)ViewBag.DepartmentList" class="form-control">
        @*<option>choose department</option>*@
    </select>
    <span class="text-danger" asp-validation-for="DepartmentId"></span>
    <br />
    <br />
    <label>Country Name:</label>
    <select id="CountryId" class="form-control" asp-items="@(SelectList)ViewBag.CountryList">
        <option>Choose Country</option>
    </select>
    <br />
    <label>City Name:</label>
    <select id="CityId" class="form-control">
        <option>Choose City</option>
    </select>
    <br />
    <label asp-for="DistrictId">District Name:</label>
    <select asp-for="DistrictId" asp-items="@(SelectList)ViewBag.DistrictList" class="form-control">
        @*<option>choose department</option>*@
    </select>
    <span class="text-danger" asp-validation-for="DistrictId"></span>
    <br />
    <label asp-for="PhotoUrl">Upload Photo</label>
    @*<input type="text" asp-for="PhotoUrl.FileName" readonly class="form-control" />*@
    <input type="file" asp-for="PhotoUrl" class="form-control" />
    <br />
    <label asp-for="CvUrl">Upload CV</label>
    @*<input type="text" asp-for="CvUrl.FileName" readonly class="form-control" />*@
    <input type="file" asp-for="CvUrl" class="form-control" />
    <br />
    <center>
        <input type="submit" value="Edit" class="btn btn-primary" />
    </center>

</form>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(function () {
        //get city data
        $("#CountryId").change(function () {
            $("#CityId").empty();
            $("#CityId").append("<option>Choose City</option>");
            var SelectedCountry = $("#CountryId").val();
            $.ajax({
                type: "POST",
                url: "/EmployeeService/GetCityDataByCountryId",
                data: { CountryId: SelectedCountry },
                success: function (res) {
                    $.each(res, function (i, e) {
                        $("#CityId").append('<option value=' + e.Id + '>' + e.CityName + '</option>');
                    })
                }

            });
        });

        $("#CityId").change(function () {
            $("#DistrictId").empty();
            $("#DistrictId").append("<option>Choose District</option>");
            var SelectedCity = $("#CityId").val();
            $.ajax({
                type: "POST",
                url: "/EmployeeService/GetDistrictDataByCityId",
                data: { CityId: SelectedCity },
                success: function (res) {
                    $.each(res, function (i, e) {
                        $("#DistrictId").append('<option value=' + e.Id + '>' + e.DistrictName + '</option>');
                    })
                }

            });
        });


    });
</script>


