@model MyDemo.Models.DepartmentViewModel
@{
    ViewBag.Title = "Delete Selected Department";
}

<h1>Delete Selected Department</h1>
<form asp-controller="Department" asp-action="Delete" class="form-group">
    <label asp-for="DepartmentName"> Department Name:</label>
    <input type="text" asp-for="DepartmentName" class="form-control" readonly/>
    <br />
    <label asp-for="DepartmentCode">Department Code:</label>
    <input type="text" asp-for="DepartmentCode" class="form-control" readonly/>
    <br />
    <center>
        <input type="submit" value="Delete" class="btn-primary" />
    </center>

</form>



